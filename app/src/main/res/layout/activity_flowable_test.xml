<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tzl.android_collection.external_lib.rxjava.FlowableTestActivity">

    <Button
        android:id="@+id/flow_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="简单练习1" />

    <Button
        android:id="@+id/flow_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/flow_1"
        android:layout_toRightOf="@+id/flow_1"
        android:text="动态指定request的个数" />

    <Button
        android:id="@+id/flow_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/flow_1"
        android:text="不限数量的上游请求" />

    <Button
        android:id="@+id/flow_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/flow_3"
        android:text="同步获取当前外部请求的数量" />

    <Button
        android:id="@+id/flow_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/flow_4"
        android:text="异步获取当前外部请求的数量" />
</RelativeLayout>
