<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tzl.android_collection.multi_media.MultiMediaActivity">

    <Button
        android:id="@+id/media_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="音频播放" />

    <Button
        android:id="@+id/media_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/media_audio"
        android:layout_alignRight="@+id/media_audio"
        android:layout_below="@+id/media_audio"
        android:layout_marginTop="45dp"
        android:text="视频播放" />
</RelativeLayout>
