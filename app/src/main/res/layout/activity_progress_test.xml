<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tzl.android_collection.custom_view.ac.ProgressTestActivity">
    <com.tzl.android_collection.custom_view.view.Sample08ObjectAnimatorView
        android:id="@+id/progress_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.tzl.android_collection.custom_view.view.SportsView
        android:id="@+id/progress_2"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <com.tzl.android_collection.custom_view.view.SportsLinearView
        android:id="@+id/progress_3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>
