<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tzl.android_collection.external_lib.rxjava.RxJavaThreadControlActivity">

    <Button
        android:id="@+id/rx_thread_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="子线程发送事件主线程接收事件"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/rx_thread_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rx_thread_1"
        android:text="多次指定上游的线程和下游线程" />
</RelativeLayout>
