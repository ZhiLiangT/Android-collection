<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:padding="5dp"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_main_icon"
                android:src="@mipmap/classify_1"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:background="@drawable/border_round_00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_main_label"
                android:text="#运动"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_alignBottom="@+id/item_main_icon"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:drawablePadding="3dp"
                android:drawableLeft="@mipmap/classify_label"
                android:background="@drawable/border_fill_c3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>